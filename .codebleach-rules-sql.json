{
  "$schema": "https://raw.githubusercontent.com/YOLOVibeCode/codebleach/main/schema/rules.schema.json",
  "rules": [
    {
      "ruleId": "sql_schema_dbo_qualified",
      "name": "SQL Schema.dbo.Table References",
      "description": "Detects DATABASE.dbo.TABLE patterns (e.g., DBZBHI.dbo.TA09052)",
      "type": "regex",
      "pattern": "\\b[A-Z][A-Z0-9_]+\\.dbo\\.[A-Z][A-Z0-9_]+\\b",
      "prefix": "SCHEMA",
      "severity": "High",
      "order": 1
    },
    {
      "ruleId": "sql_schema_qualified",
      "name": "SQL Schema.Table References",
      "description": "Detects DATABASE.TABLE patterns (e.g., DBZMEW.DW_PRIME_MCEF)",
      "type": "regex",
      "pattern": "\\b[A-Z][A-Z0-9_]+\\.[A-Z][A-Z0-9_]+\\b",
      "prefix": "SCHEMA",
      "severity": "High",
      "order": 2
    },
    {
      "ruleId": "sql_server_names",
      "name": "SQL Server Names",
      "description": "Detects server names like PRODSRV01, SQLSVR02, DBSERVER01",
      "type": "regex",
      "pattern": "\\b[A-Z]+S(RV|VR|ERVER)\\d{1,3}\\b",
      "prefix": "SRV",
      "severity": "High",
      "order": 3
    },
    {
      "ruleId": "sql_database_prefix",
      "name": "SQL DB Prefix Databases",
      "description": "Detects database names starting with DB (e.g., DB2MEW, DBZMEW, DBZBHI)",
      "type": "regex",
      "pattern": "\\bDB[A-Z0-9]+\\b",
      "prefix": "DB",
      "severity": "High",
      "order": 4
    },
    {
      "ruleId": "sql_table_prefixed",
      "name": "SQL Prefixed Tables",
      "description": "Detects table names like TB00123, TA09052 (2-letter prefix + 4-6 digits)",
      "type": "regex",
      "pattern": "\\b[A-Z]{2}\\d{4,6}\\b",
      "prefix": "TBL",
      "severity": "Medium",
      "order": 5
    }
  ]
}

